extends ../layout

block content
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/products/add", class="btn btn-success float-right mt-2") Add New Product
    table.table
        thead
            tr
                th Name
                th Description
                th Price
                th Actions           
                th Rating     
        tbody
            each product in products
                tr
                    td=product.name
                    td=product.description
                    td=product.price
                    td
                        a(href="/products/delete/"+product._id, class="btn btn-danger m-1") Delete
                        a(href="/products/edit/"+product._id, class="btn btn-warning m-1") Edit
                        a(href="/products/cart/"+product._id, class="btn btn-info m-1") Add To Cart
